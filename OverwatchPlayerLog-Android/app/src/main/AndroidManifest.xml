<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.benh.overwatchplayerlog">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.listanddetails.OwPlayerItemListActivity"
            android:label="@string/title_players"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.listanddetails.OwPlayerItemDetailActivity"
            android:label="@string/title_owplayeritem_detail"
            android:parentActivityName=".controllers.listanddetails.OwPlayerItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.benh.overwatchplayerlog.controllers.listanddetails.OwPlayerItemListActivity" />
        </activity>
        <activity
            android:name=".controllers.OwPlayerRecordCreateActivity"
            android:label="@string/title_activity_ow_player_record_create">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.listanddetails.OwPlayerItemListActivity"/>
        </activity>
        <activity
            android:name=".controllers.OwPlayerRecordEditActivity"
            android:label="@string/title_activity_ow_player_record_edit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.listanddetails.OwPlayerItemListActivity"/>
        </activity>
    </application>

</manifest>